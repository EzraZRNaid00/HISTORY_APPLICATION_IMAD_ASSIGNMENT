<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iVHistoryBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="324dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/oldbookopenblankpage" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/ranga_regular"
        android:text="welcome historian"
        android:textColor="@color/material_dynamic_tertiary20"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/theartshowcase" />

    <TextView
        android:id="@+id/letsee"
        android:layout_width="145dp"
        android:layout_height="81dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="LETS SEE WHICH HISTORICAL FIGURE PASSED AT YOUR AGE"
        app:layout_constraintStart_toStartOf="@+id/iVHistoryBook"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <Button
        android:id="@+id/btnenter"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="154dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:background="#F44336"
        android:text="PROCEED"
        android:textColor="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/blankpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689"
        app:srcCompat="@drawable/projectpaper" />

    <TextView
        android:id="@+id/celebinfo"
        android:layout_width="154dp"
        android:layout_height="210dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/blankpage"
        app:layout_constraintEnd_toEndOf="@+id/blankpage"
        app:layout_constraintStart_toStartOf="@+id/blankpage"
        app:layout_constraintTop_toTopOf="@+id/blankpage" />

    <EditText
        android:id="@+id/enterage"
        android:layout_width="136dp"
        android:layout_height="66dp"
        android:ems="10"
        android:inputType="number"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnClear"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="139dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="#F44336"
        android:text="CLEAR"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toEndOf="@+id/btnenter"
        app:layout_constraintTop_toBottomOf="@+id/enterage"
        app:layout_constraintVertical_bias="0.029"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>